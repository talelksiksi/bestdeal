{% extends '::base.html.twig' %}

{% block body -%}
    <script src="{{asset('js/jquery.tools.min.js')}}"></script>
     <link href="{{asset('css/inscri.css')}}" rel="stylesheet"/>
     
     <div class="row" style=" ">
  <div class="col-md-9">
    
    <div class="row">
        <div class="col-md-9" >
            <h3 style="color: #ffffff ; border-bottom-color: #ffffff; border-bottom-style: groove "  > {{entity.libelle}}
          </h3>
        </div>
      <div class="col-md-6" >
          
          <img src="{{ entity.image }}" height="200px" width="300px" class="img-rounded">
      </div>
      <div class="col-md-6">
        {% if entity.statut ==1 %}
                <h5 style="color: #ffffff ;position: relative;left: 120px;font-family: Helvetica Neue,Helvetica,Arial,sans-serif">Ce deal est valide</h5>
                {% else %}
                    <h2 style="color: #ffffff;position: relative;left: 10px">Ce deal n'est pas valide</h2>
                    {% endif %}
                
                
                
                <table  class="table-condensed" style="position: relative;left: 120px">
                                    <tr>
                                        <th style="font-size: 11px">{{ entity.prixinitial }}</td>
            </tr>
            <tr>
                <th style="font-size:  11px;font-family: Helvetica Neue,Helvetica,Arial,sans-serif">Le Prix Promotionnel est :</th>
                <td style="font-size: 11px">{{ entity.prixpromotionnel }}</td>
            </tr>
            <tr>
                <th style="font-size: 11px">la Date de debut</th>
                <td style="font-size: 11px">{{ entity.datedebut }}</td>
            </tr>
            <tr>
                <th style="font-size: 11px">la Date du fin</th>
                <td style="font-size: 11px">{{ entity.datefin }}</td>
            </tr>
                    
                </table>
      </div>
    </div>
  </div>
</div>

     
    
     
        
    <hr/>
        
    
    <div  class="col-md-6" style="float: left;margin-left: 10px">
        
        
    </div>
                    <div class="row">
    <table class="record_properties" style="margin-left: 50px;border-radius: 10px;">
        
        <tbody>
            
            <tr>
                <th style="color: #ffffff;font-size: large; "><strong>Type de Deal</strong></th>
                <td style="color: #ffffff">{{ entity.typedeal }}</td>
            </tr>
            <tr>
                <th style="color: #ffffff;font-size: large;">Categorie</th>
                <td style="color: #ffffff">{{ entity.categorie }}</td>
            </tr>
            
            <tr>
                
            <tr>
                <th style="color: #ffffff;font-size: large;">Quantite</th>
                <td style="color: #ffffff">{{ entity.quantite }}</td>
            </tr>
            <tr>
                <th style="color: #ffffff;font-size: large;">Descriptif</th>
                <td style="color: #ffffff">{{ entity.descriptif }}</td>
            </tr>
            
              
            
        </tbody>
    </table>
                                   </div>


    <script>
        $(document).ready(function() {



            $(function() {


                // if the function argument is given to overlay,
                // it is assumed to be the onBeforeLoad event listener
                $("a[rel]").overlay({
                    mask: 'darkred',
                    effect: 'apple',
                    onBeforeLoad: function() {
                        
                        // grab wrapper element inside content
                        var wrap = this.getOverlay().find(".contentWrap");

                        // load the page specified in the trigger
                        wrap.load(this.getTrigger().attr("href"));
                    }

                });
            });
        });

    </script>






    <!-- /.navbar-collapse -->


    <div class="container">

        <div class="row">
                         


            <div class="apple_overlay" id="overlay">

                <div class="contentWrap"></div>
            </div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('deal') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('deal_edit', { 'id': entity.id }) }}" rel="#overlay">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
