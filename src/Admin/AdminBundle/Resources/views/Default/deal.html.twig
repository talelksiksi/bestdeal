{%extends "AdminAdminBundle::layout.html.twig"%}
{% block pagewrapper %}

    <div id="pagewrapper">
            <div class="row">
                <div class="col-lg-10">
                    <h1 class="page-header">Liste Deals</h1>
                </div>
                  <div class="col-lg-2">
                <img src="{{asset('img/logo.PNG')}}">   
            </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
             
            <div class="row">
                 <div class="col-lg-12">
			<div class="col-lg-8">
			</div>
			<div class="col-lg-4">
            
                  <div class="panel panel-primary">
                        <div class="panel-heading">
                            Recherche...
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#home" data-toggle="tab">Libelle</a>
                                </li>
                                <li><a href="#profile" data-toggle="tab">Categorie</a>
                                </li>
                             
                                
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="home">
                                    <h4>Par Libelle :</h4>
                                   <form action="{{path('deal_rechercher')}}" method="POST">
      
			
			                     <div class="form-group input-group" >
                            
                           
                                           
                                <input type="text" class="form-control" placeholder="Search..."name="recherche" >
                                           
                                <span class="input-group-btn">
                                <td> <input type="submit" class="btn btn-primary btn-block" value="Rechercher"/>               
                                 </span>
                           
                          </div>
			
                             </form>
                                </div>
                                <div class="tab-pane fade" id="profile">
                                    <h4>Par categorie :</h4>
                                       <form action="{{path('deal_rechercher_cat')}}" method="POST">
      
			
			<div class="form-group input-group" >
                            
                           
                                           
                                <input type="text" class="form-control" placeholder="Search..."name="recherche" >
                                           
                                <span class="input-group-btn">
                                <td> <input type="submit" class="btn btn-primary btn-block" value="Rechercher"/>               
                                 </span>
                           
                          </div>
			
                             </form>
                                </div>
                             
                                
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
            </div>
                <div class="col-lg-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                           List
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Libelle</th>
                                            <th>Type</th>
                                            <th>Categorie</th>
                                           
                                          
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                       {% for deal in deals %}
                                        <tr>
                                        <td>{{deal.libelle}}</td>
                                        <td>{{deal.typedeal}}</td>
                                        <td>{{deal.categorie}}</td>
           <td><a href="{{path('deal_supprimer',{id:deal.iddeal})}}" class="btn btn-outline btn-danger btn-block">Supprimer ce Deal</a></td>                             
                                      

                                        </tr>
                                      {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                           
    <script>
    $(document).ready(function() {
        $('#dataTables-example').dataTable();
    });
    </script>

    
    
    
{% endblock %}
    