{%extends "AdminAdminBundle::layout.html.twig"%}
{% block pagewrapper %}

    <div id="pagewrapper">
            <div class="row">
                
                <div class="col-lg-10">
                    <h1 class="page-header">Recherche...</h1>
                </div>
                  <div class="col-lg-2">
                <img src="{{asset('img/logo.PNG')}}">   
            </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
                        <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            List
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                {% if recherches | length !=0%}
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                             <th>Libelle</th>
                                            <th>Type</th>
                                            <th>Categorie</th>
                                          
                                          

                                           
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        
                                       {% for recherche in recherches %}
                                          
                                        <tr>
                                        <td>{{recherche.libelle}}</td>
                                        <td>{{recherche.typedeal}}</td>
                                        <td>{{recherche.categorie}}</td>
                                      
                                        <td><a href="{{path('deal_supprimer',{id:recherche.iddeal})}}" class="btn btn-outline btn-danger btn-block">Supprimer ce Deal</a></td>  

                                        </tr>
                                        
                            
                                      {% endfor %}
                                           </tbody>
                                </table>
                                     
                                                                            
                                
                            </div>          
                             {% else %}         
                                   
                                           <div class="alert alert-danger">
                                Aucun resultat pour votre recherche. <a href=prestataire class="alert-link">Rechercher</a>.   
                             {% endif%}
                                 
                            </div>
                        </div>
                    </div>
                           
    <script>
    $(document).ready(function() {
        $('#dataTables-example').dataTable();
    });
    </script>

    
    
    
{% endblock %}
    