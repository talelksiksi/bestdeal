{%extends "AdminAdminBundle::layout.html.twig"%}
{% block pagewrapper %}

    <div id="pagewrapper">
        <div class="row">
            <div class="col-lg-10">
                <h1 class="page-header">Liste Prestataires</h1>
            </div>
              <div class="col-lg-2">
                <img src="{{asset('img/logo.PNG')}}">   
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
          <form action="{{path('user_rechercherP')}}" method="POST">
      <div class="col-lg-8">
      </div>
			<div class="col-lg-4">
			<div class="form-group input-group" >
                            
                           
                                           
                                <input type="text" class="form-control" placeholder="Search..."name="recherche" >
                                           
                                <span class="input-group-btn">
                                <td> <input type="submit" class="btn btn-primary btn-block" value="Rechercher"/>               
                                 </span>
                           
                          </div>
			</div>
                             </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        List
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Societe</th>
                                        <th>Adresse</th>
                                        <th>Telephone</th>
                                          <th>Email</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    {% for prest in prests %}
                                        <tr>
                                            <td>{{prest.societe}}</td>
                                            <td>{{prest.adresse}}</td>
                                           <td>{{prest.telephone}}</td>
                                            <td>{{prest.email}}</td>
                                            <td><a href="{{path('prest_supprimer',{id:prest.id})}}" class="btn btn-outline btn-danger btn-block">Supprimer ce prestataire</a></td>            

                                        </tr>
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>

                        <script>
                            $(document).ready(function() {
                                $('#dataTables-example').dataTable();
                            });
                        </script>




                    {% endblock %}
                    {# empty Twig template #}
