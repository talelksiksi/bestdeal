{%extends "AdminAdminBundle::layout.html.twig"%}
{% block pagewrapper %}

    <div id="pagewrapper">
            <div class="row">
                <div class="col-lg-10">
                    <h1 class="page-header">Liste Prestataires a valider</h1>
                </div>
                  <div class="col-lg-2">
                <img src="{{asset('img/logo.PNG')}}">   
            </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                           List
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Societe</th>
                                        <th>Adresse</th>
                                      
                                          <th>Email</th>
                                            <th>Telephone</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                       {% for prest in prests %}
                                        <tr>
                                         <td>{{prest.societe}}</td>
                                            <td>{{prest.adresse}}</td>
                                           
                                            <td>{{prest.email}}</td>
                                            <td>{{prest.telephone}}</td>
                           <td><a href="{{path('prest_supprimer',{id:prest.id})}}" class="btn btn-outline btn-danger btn-block">Supprimer ce prestataire</a>
                           <a href="{{path('admin_admin_ValiderP',{id:prest.id})}}" class="btn btn-outline btn-success btn-block">Valider ce prestataire</a></td>            

                                        </tr>
                                      {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                           
    <script>
    $(document).ready(function() {
        $('#dataTables-example').dataTable();
    });
    </script>

    
    
    
{% endblock %}
